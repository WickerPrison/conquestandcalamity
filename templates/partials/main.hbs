<div class="mainSection">
    <img class="characterImg" src="{{actor.img}}" data-edit="img" data-action="editImage" title="{{actor.name}}">
    <div class="resourceHolder emphasis">
        {{> "systems/conquestandcalamity/templates/partials/resource-box.hbs" displayName="HP" foundryName="system.hp.current" value=system.hp.current foundryMaxName="system.hp.max" maxValue=system.hp.max}}
        {{> "systems/conquestandcalamity/templates/partials/resource-box.hbs" displayName="Temp HP" foundryName="system.hp.temp" value=system.hp.temp}}
        {{> "systems/conquestandcalamity/templates/partials/resource-box.hbs" displayName="Stamina" foundryName="system.stamina.current" value=system.stamina.current foundryMaxName="system.stamina.max" maxValue=system.stamina.max}}
    </div>
    <div class="resourceHolder wideResource">
        {{> "systems/conquestandcalamity/templates/partials/resource-box.hbs" displayName="Healing Resist." foundryName="system.healingResistance" value=system.healingResistance}}
        {{> "systems/conquestandcalamity/templates/partials/resource-box.hbs" displayName="system.otherResourceName" nameValue=system.otherResourceName foundryName="system.otherResource" value=system.otherResource}}
    </div>
    <div class="otherStats">
        <div><span class="statLabel">Movement Points:</span> 15</div>
        <div><span class="statLabel">Damage Reduction:</span> 15</div>
        <div><span class="statLabel">Defense (M|R):</span> 1 | 2</div>
    </div>

    <div class="otherStats" style="border-top: none">
        <div class="statText"><span class="statLabel">Resistances:</span> Cold 4, Fire 2</div>
        <div class="statText"><span class="statLabel">Weaknesses:</span> Necrotic 3, Radiant 7</div>
        <div class="statText"><span class="statLabel">Immunities:</span> Poison, Lightning</div>
    </div>
    <div class="otherStats" style="border-top: none">
        <div class="statText"><span class="statLabel">Conditions:</span> Disoriented 3, Burning</div>
        <div class="statText"><span class="statLabel">Diseases:</span> Lycanthropy</div>
        <div class="statText"><span class="statLabel">Critical Injuries:</span> Minor Nick (3)</div>
    </div>
    <div class="statsHeader">Attacks</div>
    {{> "systems/conquestandcalamity/templates/partials/attack.hbs"}}
    {{> "systems/conquestandcalamity/templates/partials/attack.hbs"}}
    {{> "systems/conquestandcalamity/templates/partials/attack.hbs"}}
</div>